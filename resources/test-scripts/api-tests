#!/bin/bash

set -e -x

function run_api_tests() {
    cd sn_api
    TEST_AUTH_CREDENTIALS=$(cat ~/.safe/cli/credentials)
    cargo test --release --lib --features=simulated-payouts -- --test-threads=1
    cd -
}

# Temporarily disable running these tests as they currently
# need refactoring to account for network sync up periods.
# run_api_tests
